<?xml version="1.0" encoding="UTF-8"?>
<project name="JEMPSDK" default="copy" basedir=".">

	<target name="init">
		<tstamp />
		<property name="Name" value="JEMPSDK" />
		<property name="version" value="0.1" />
		<property name="year" value="2011" />

		<property name="debug" value="on" />
		<property name="optimize" value="on" />
		<property name="deprecation" value="on" />

		<property name="src" value="./src" />
		<property name="root" value="D:\BeiHuaYuanWorkSpace\ESPApplication\ESPLib\CodeSpace\JEnterprise\public" />
		<property name="public"  value="D:\HyeclWorkSpace\HyeclEmp\WebRoot\WEB-INF\lib" />
		<property name="lib" value="${root}" />
		<property name="classes" value="./classes" />

		<path id="compile.classpath">
			<fileset dir="${root}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${public}">
				<include name="*.jar" />
			</fileset>
			<pathelement location="${classes}" />
		</path>
		<mkdir dir="${classes}" />
	</target>

	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${classes}" fork="true" memorymaximumsize="256m">
			<classpath refid="compile.classpath" />
		</javac>
	</target>

	<target name="clean" depends="compile">
		<delete>
			<fileset dir="${public}">
				<include name="EMPSDK.jar" />
			</fileset>
		</delete>
	</target>

	<target name="package" depends="clean">
		<jar jarfile="${public}/JEMPSDK.jar">
			<fileset dir="${classes}">
				<include name="com/efounder/**" />
				<include name="framework/**" />
				<include name="jservice/**" />
				<include name="org/**" />
				<include name="net/**" />
				<include name="com/efounder/comp/**" />
				<include name="jframework/**" />
				<include name="jfoundation/**" />				
				<include name="com/pansoft/**" />
				<include name="jtoolkit/**" />
				<include name="jdcom/**" />
			</fileset>			
		</jar>
	</target>

	<target name="copy" depends="package">
	</target>

</project>
